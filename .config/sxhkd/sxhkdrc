# launch terminal emulator
super + Return
	$TERMINAL

# program launcher
super + p
	dmenu_run -nf '#979eab' -nb '#1e222a' -sb '#2b2f37' -sf '#61afef' -fn 'monospace-10' -p 'Run'
  
# reload sxhkd configuration file
super + Escape
	pkill -USR1 -x sxhkd

# file explorer
super + e
  pcmanfm

# restart bspwm
super + shift + r
	bspc wm -r

# quit bspwm
ctrl + shift + Escape
  bspc quit

# close and kill focused window
# super + shift +  {c,q}
# 	bspc node -{c,k}

super + shift +  q
 	bspc node -c

# alternate between tiled and monacle layout
super + m
	bspc desktop -l next

# set the window state
super + f
	bspc node -t {tiled,fullscreen}

# alternate between floating and tiled layout
super + shift + space 
	bspc node -t {floating, tiled}

#
# focus/swap
#

# Focus in the given direction
super + {_,shift + }{h,j,k,l}
	bspc node -{f,s} {west,south,north,east}

# focus the next/previous window in the current desktop
super + {_,shift + }c
	bspc node -f {next,prev}.local.!hidden.window

# focus the older or newer node in the focus history
super + {o,i}
	bspc wm -h off; \
	bspc node {older,newer} -f; \
	bspc wm -h on

# focus or send to the given desktop
super + {_,shift + }{1-9}
	bspc {desktop -f,node -d} '^{1-9}'

# focus the last node/desktop
super + {grave,Tab}
	bspc {node,desktop} -f last

# Custom resize
super + alt + {h,j,k,l}
	$HOME/.config/bspwm/helpers/resize {west,south,north,east}

#
# preselect
#

# preselect the direction
super + ctrl + {h,j,k,l}
	bspc node -p {west,south,north,east}

# preselect the ratio
super + ctrl + {1-9}
	bspc node -o 0.{1-9}

# cancel the preselection for the focused node
super + ctrl + space
	bspc node -p cancel

# cancel the preselection for the focused desktop
super + ctrl + shift + space
	bspc query -N -d | xargs -I id -n 1 bspc node id -p cancel

# increase volume
XF86AudioRaiseVolume
	pactl set-sink-volume @DEFAULT_SINK@ +10%
    
# decrease volume
XF86AudioLowerVolume
  pactl set-sink-volume @DEFAULT_SINK@ -10%

# toggle mute 
XF86AudioMute
  pactl set-sink-mute @DEFAULT_SINK@ toggle 

# toggle micmute
XF86AudioMicMute
  pactl set-source-mute @DEFAULT_SOURCE@ toggle

# increase brightness
XF86MonBrightnessUp
  brightnessctl set +10%

# decrease brightness
XF86MonBrightnessDown
  brightnessctl set -10%
  
# take a screenshot with crosshair
@Print
  flameshot gui

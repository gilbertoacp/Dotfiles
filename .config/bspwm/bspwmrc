#! /bin/sh

### Autostart ###
pgrep -x sxhkd > /dev/null || sxhkd &
#launch-polybar bspwm &

### Layout ###
bspc config border_width         4
bspc config window_gap           6 
bspc config split_ratio          0.50
bspc config borderless_monocle   true
bspc config gapless_monocle      true
bspc config focus_follows_pointer true

### Pointers ###
bspc config pointer_modifier mod4
bspc config pointer_action1 move
bspc config pointer_action2 resize_side
bspc config pointer_action3 resize_corner

### Monitors ###
bspc monitor -d 1 2 3 4 5 6 7 8 9 
bspc config remove_disabled_monitors true
bspc config merge_overlapping_monitors true

### Colors ###
bspc config normal_border_color	"#4c566a"
bspc config active_border_color	"#1e1e1e"
bspc config focused_border_color "#82aaff"
bspc config presel_feedback_color	"#82aaff"
bspc config urgent_border_color "#dd2727"

### Rules ###
bspc rule -a Nitrogen state=floating
bspc rule -a Pavucontrol state=floating
bspc rule -a flameshot state=floating
bspc rule -a SimpleScreenRecorder state=floating
bspc rule -a Qalculate-gtk state=floating
bspc rule -a i7z-gui state=floating
bspc rule -a Sxiv state=floating
bspc rule -a File-roller state=floating
bspc rule -a zoom state=floating
bspc rule -a Pragha state=floating
bspc rule -a Eog state=floating
bspc rule -a Emacs state=tiled
bspc rule -a Bitwarden state=floating
bspc rule -a obs desktop='^9' follow=on

# - External Rules Command
bspc config external_rules_command "$HOME/.config/bspwm/helpers/external-rules"

#background=#9d0191
#color=#FFFFFF

[weather]
command=curl -s wttr.in/Buenos_Aires?format=1 | grep -o "[0-9].*"
interval=1
label= 
#background=#fd3a69
#color=#FFFFFF

[date]
command=date '+%b %d %H:%M'
interval=1
label= 
#background=#fecd1a
#color=#000000
